extends layout

block content

  div.row
    div.col-xl-6.col-lg-6
      div.card.shadow.mb-4
        //Card header
        div.card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
          h6.m-0.font-weight-bold.text-primary Datos Personales
        //Card body
        div.card-body
          div.form-group
            input#txt_nombre.form-control(placeholder='Nombre(s)' type='text')
          div.form-group
            input#txt_paterno.form-control(placeholder='Apellido Paterno' type='text')
          div.form-group
            input#txt_materno.form-control(placeholder='Apellido Materno' type='text')
          
    div.col-xl-6.col-lg-6
      div.card.shadow.mb-4
        //card header
        div.card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
          div.m-0.font-weight-bold.text-primary Datos de la moto
        div.card-body
          div.form-group
            label(for='txt_cte') Cliente
            input#txt_cte.form-control(placeholder='Nombre del cliente' type='text')
          div.form-group
            table(width='100%')
              tbody
                tr
                  td(align='right') SUBTOTAL
                  td(align='right') 0.00
                tr
                  td(align='right') I.V.A.
                  td(align='right') 0.00
                tr
                  td(align='right') TOTAL
                  td(align='right') 0.00
          div.form-group
            a.btn.btn-primary.btn-icon-split(href='#')
              span.icon.text-white-50
                i.fas.fa-arrow-right
              span.text Realizar Venta